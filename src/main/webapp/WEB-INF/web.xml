    </servlet>  
    <servlet-mapping>
        <servlet-name>EditListServlet</servlet-name>
        <url-pattern>/editList</url-pattern>
    </servlet-mapping>
    <servlet>  
        <servlet-name>EdititemServlet</servlet-name>
        <servlet-class>controller.EdititemServlet</servlet-class>
    </servlet>  
    <servlet-mapping>
        <servlet-name>EdititemServlet</servlet-name>
        <url-pattern>/editItem</url-pattern> 
