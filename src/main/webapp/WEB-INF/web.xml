    </servlet>
    <servlet-mapping>
        <servlet-name>AddItemServlet</servlet-name>
        <url-pattern>/addItem</url-pattern>
    </servlet-mapping>
          
    <servlet>
        <servlet-name>AddListServlet</servlet-name>
        <servlet-class>controller.AddListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddListServlet</servlet-name>
        <url-pattern>/addList</url-pattern>
    </servlet-mapping>
        
    <servlet>
        <servlet-name>DeleteItemServlet</servlet-name>
        <servlet-class>controller.DeleteItemServlet</servlet-class>
    </servlet>  
    <servlet-mapping>
        <servlet-name>DeleteItemServlet</servlet-name>
        <url-pattern>/eraseItem</url-pattern>
    </servlet-mapping>
        
    <servlet>
        <servlet-name>DeleteListServlet</servlet-name>
